<main>
    <article>
        <section class="adventure-section hero">
            <button class="btn" onclick="goBack()">Go Back</button>
            <div class="container">
                <div class="content">
                    <h2 class="h2">Adventure Ideas</h2>
                </div>
                <div class="adventure-list">
                    <% postAdd.forEach(function(post){ %>
                        <%  var titlePost = post.title; %>
                        <%  var postId = post.id; %>
                        <%  var image = post.image; %>
                        <%  var rating = post.rating; %>
                        <%  var interest = post.status; %>
                        <%  var description = post.description.substring(0,25); %>
                        
                      <form method="PATCH" class='card' id="post-form">
                         <div class="grid-list adv-list">
                            <figure class="img-holder">
                                <img src="<%= image %>" alt="<%= titlePost %>" class="img-cover">
                            </figure>
                            <div class="text-rating">
                                <h3 class="h4"><%= titlePost %></h3>
                                <div class="rating">
                                    <input type="radio" name="rating" value="1">
                                    <input type="radio" name="rating" value="2">
                                    <input type="radio" name="rating" value="3">
                                    <input type="radio" name="rating" value="4">
                                    <input type="radio" name="rating" value="5">
                                    <!-- <span class="fa fa-star checked"></span> -->
                                    <!-- <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star"></span> -->
                                </div>
                            </div>
                            <input type="hidden" name="hidden" id="hidden" value="<%= postId %>">
                            <div class="flex-text">
                                <p class="p"><%= description %>....</p><a href="/post/<%= postId %>" name="/posts/titlePost" class="p redText">read more</a></p>
                            </div>
                            <button type="submit" class="btn-primary" id="button"><%= interest %></button>
                         </div> 
                        </form>
                       <% }) %>

                </div>
            </div>
        </section>
    </article>
</main>

<script>
    function goBack() {
      history.back();
    }
  </script>

  <script src="/public/javascript/adventure-page.js" type="application/javascript"></script>